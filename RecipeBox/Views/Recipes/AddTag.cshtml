@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model RecipeBox.Models.Recipe

<h2>Add a Tag</h2>

<h4>Add a Tag to this Recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.Label("Select Tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Save" class="fancyBtn" />
}

<p class="fancyBtn"">@Html.ActionLink("Back to list", "Index")</p>