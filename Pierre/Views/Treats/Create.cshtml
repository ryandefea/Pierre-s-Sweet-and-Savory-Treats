@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<div class="container my-4">
  <h4 class="text-center">Add a new Recipe</h4>
  <hr />
  <div class="d-flex flex-row justify-content-center m-2">
    @using (Html.BeginForm())
    {
        @Html.Label("Recipe Name: ", null, new { @class ="mx-2"})
        @Html.TextBoxFor(model => model.Name, null, new { @class ="mx-2"})

        @Html.LabelFor(model => model.Instruction, null, new { @class ="mx-2"})
        @Html.TextBoxFor(model => model.Instruction, null, new { @class ="mx-2"})

        @Html.LabelFor(model => model.Rating, null, new { @class ="mx-2"})
        @Html.TextBoxFor(model => model.Rating, null, new { @class ="mx-2"})

        @Html.Label("Select tag")
        @Html.DropDownList("TagId")

        <input type="submit" value="Add new recipe" class="fancyBtn" />
    }
  </div>
  <div class="d-flex flex-row justify-content-center">
    <p class="fancyBtn">@Html.ActionLink("Show all recipes", "Index")</p>
  </div>
</div>