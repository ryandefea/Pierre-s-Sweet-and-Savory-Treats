@{
  Layout = "_Layout";
}

@model Pierre.Models.Treat

<div class="container my-4">
  <h4 class="text-center">Add a new Treat</h4>
  <hr />
  <div class="d-flex flex-row justify-content-center m-2">
    @using (Html.BeginForm())
    {
        @Html.Label("Treat Name: ", null, new { @class ="mx-2"})
        @Html.TextBoxFor(model => model.Name, null, new { @class ="mx-2"})

        @* @Html.LabelFor(model => model.Instruction, null, new { @class ="mx-2"})
        @Html.TextBoxFor(model => model.Instruction, null, new { @class ="mx-2"})

        @Html.LabelFor(model => model.Rating, null, new { @class ="mx-2"})
        @Html.TextBoxFor(model => model.Rating, null, new { @class ="mx-2"}) *@

        @Html.Label("Select flavor")
        @Html.DropDownList("FlavorId")

        <input type="submit" value="Add new treat" class="fancyBtn" />
    }
  </div>
  <div class="d-flex flex-row justify-content-center">
    <p class="fancyBtn">@Html.ActionLink("Show all treats", "Index")</p>
  </div>
</div>