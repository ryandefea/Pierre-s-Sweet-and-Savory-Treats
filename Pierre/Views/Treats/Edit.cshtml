@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>EDIT</h2>

<h4>Edit this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Instruction)
    @Html.TextBoxFor(model => model.Instruction)

    @Html.LabelFor(model => model.Rating)
    @Html.TextBoxFor(model => model.Rating)

    @Html.Label("Select tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Save" />
}

<p class="fancyBtn">@Html.ActionLink("Back to list", "Index", "Recipes")</p>