@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Tag>;

<div class="container my-4">
  <h1 class="text-center my-4">TAGS</h1>
  <hr />

  <div class="d-flex flex-column align-items-center my-4">
    <div class="d-flex flex-column align-items-start">
      @if (@Model.Count == 0)
      {
        <h3>No Category Tags have been added yet!</h3>
      } 


        @foreach (Tag tag in Model)
        {
          <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId })
        </li>
        }
    </div>
    <div class="d-flex flex-row justify-content-center my-4">
      <p class="fancyBtn mx-3">@Html.ActionLink("Add Category Tag", "Create", "Tags")</p> 
      <p class="fancyBtn mx-3">@Html.ActionLink("Home", "Index", "Home")</p>
      
    </div>
  </div>
</div>
