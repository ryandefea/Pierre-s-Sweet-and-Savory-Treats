@{
  Layout = "_Layout";
}

@using Pierre.ViewModels

@model LoginViewModel

<div class="container">
  <h1 class="text-center">Log in with your account</h1>
  <hr />
  <div class="d-flex flex-row justify-content-center">
    @using (Html.BeginForm())
    {
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { required="required"})

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { required="required"})

        <input type="submit" value="Log in" class="btn btn-outline-warning btn-rounded" />
    }
  </div>
</div>